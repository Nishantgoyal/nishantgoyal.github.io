<%- include ("../partials/header.ejs") %>

<div class="container-fluid p-0 m-0">
  <div class="row m-0">
    <div class="side_bar col-3 p-0 ">
      <h1 class="text-center bg-dark text-light m-0 p-3"> TODOs </h1>
      <% todos.forEach(function(todo) { %>
        <div class="row m-0">
          <a href="/todos/<%= todo.id %>" class="col-12 p-2 item <%= todo.task_status %> m-0 text-center">
            <h4>
                <%= todo.item %>
            </h4>
          </a>
      </div>
      <% }); %>      
    </div>
    <div class="main_content col-9 p-0 m-0">
      <div class="d-flex justify-content-end">
        <a class="btn btn-info" href="/todos/new">Add A TODO</a>
      </div>
    </div>
  </div>
</div>
<div class="container">
  
  <div class="row">
  </div>
</div>


<%- include ("../partials/footer.ejs") %>
