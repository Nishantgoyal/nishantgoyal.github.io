<%- include ("../partials/header.ejs") %>

<div class="container">
<form class="form new" action="/todos" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="item" placeholder="Add Todo">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="category" placeholder="Category">
    </div>
    <div class="form-group">
        <select class="form-control" name="type">
        <option value="one-time" default> One Time </option>
        <option value="recurring"> Recurring </option>
        </select>
    </div>
    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" value="Create">
    </div>
</form>
</div>

